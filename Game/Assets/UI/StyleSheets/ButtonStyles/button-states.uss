}

/* =================================
   TOOLBAR BUTTON STATES
   ================================= */

.btn-toolbar:hover {
    background-color: var(--color-hover);
    color: var(--color-text-primary);
}

.btn-toolbar:hover .btn-icon {
    -unity-background-image-tint-color: var(--color-text-primary);
}

.btn-toolbar:active {
    background-color: var(--color-active);
    /* transform: scale(0.95); - transform not supported in Unity UI Toolkit */
}

.btn-toolbar:disabled {
    background-color: transparent;
    color: var(--color-text-disabled);
    cursor: default;
    /* transform: none; - transform not supported in Unity UI Toolkit */
