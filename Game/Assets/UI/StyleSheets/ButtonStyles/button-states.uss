/* AIDEV-NOTE: Button interactive states - hover, active, disabled, loading, and selected states */

/* =================================
   PRIMARY BUTTON STATES
   ================================= */

.btn-primary:hover {
    background-color: var(--color-hover);
    border-color: var(--color-focus);
    /* NOTE: transform may have limited support in Unity */
}

.btn-primary:active {
    background-color: var(--color-active);
    border-color: var(--color-accent);
    /* transform: translateY(0); - transform not supported in Unity UI Toolkit */
}

.btn-primary:disabled {
    background-color: var(--color-secondary-bg);
    color: var(--color-text-disabled);
    border-color: var(--color-border-alpha);
    cursor: default;
    /* transform: none; - transform not supported in Unity UI Toolkit */
}

.btn-primary:disabled .btn-icon {
    -unity-background-image-tint-color: var(--color-text-disabled);
}

/* =================================
   SECONDARY BUTTON STATES
   ================================= */

.btn-secondary:hover {
    background-color: var(--color-accent-bg);
    border-color: var(--color-accent);
    /* transform: translateY(-1px); - transform not supported in Unity UI Toolkit */
}

.btn-secondary:active {
    background-color: var(--color-active);
    border-color: var(--color-accent);
    /* transform: translateY(0); - transform not supported in Unity UI Toolkit */
}

.btn-secondary:disabled {
    background-color: var(--color-primary-bg);
    color: var(--color-text-disabled);
    border-color: var(--color-border-alpha);
    cursor: default;
    /* transform: none; - transform not supported in Unity UI Toolkit */
}

.btn-secondary:disabled .btn-icon {
    -unity-background-image-tint-color: var(--color-text-disabled);
}

/* =================================
   DESTRUCTIVE BUTTON STATES
   ================================= */

.btn-destructive:hover {
    background-color: var(--color-destructive-hover);
    border-color: var(--color-destructive-hover);
    /* transform: translateY(-1px); - transform not supported in Unity UI Toolkit */
}

.btn-destructive:active {
    background-color: var(--color-destructive-active);
    border-color: var(--color-destructive-active);
    /* transform: translateY(0); - transform not supported in Unity UI Toolkit */
}

.btn-destructive:disabled {
    background-color: var(--color-secondary-bg);
    color: var(--color-text-disabled);
    border-color: var(--color-border-alpha);
    cursor: default;
    /* transform: none; - transform not supported in Unity UI Toolkit */
}

.btn-destructive:disabled .btn-icon {
    -unity-background-image-tint-color: var(--color-text-disabled);
}

/* =================================
   ICON BUTTON STATES
   ================================= */

.btn-icon-only:hover {
    background-color: var(--color-hover);
    color: var(--color-text-primary);
}

.btn-icon-only:hover .btn-icon {
    -unity-background-image-tint-color: var(--color-text-primary);
}

.btn-icon-only:active {
    background-color: var(--color-active);
    color: var(--color-text-primary);
    /* transform: scale(0.95); - transform not supported in Unity UI Toolkit */
}

.btn-icon-only:active .btn-icon {
    -unity-background-image-tint-color: var(--color-text-primary);
}

.btn-icon-only:disabled {
    background-color: transparent;
    color: var(--color-text-disabled);
    cursor: default;
    /* transform: none; - transform not supported in Unity UI Toolkit */
}

.btn-icon-only:disabled .btn-icon {
    -unity-background-image-tint-color: var(--color-text-disabled);
}

/* =================================
   TEXT BUTTON STATES
   ================================= */

.btn-text:hover {
    color: var(--color-focus);
    background-color: var(--color-hover);
}

.btn-text:hover .btn-icon {
    -unity-background-image-tint-color: var(--color-focus);
}

.btn-text:active {
    color: var(--color-accent);
    background-color: var(--color-active);
    /* transform: scale(0.98); - transform not supported in Unity UI Toolkit */
}

.btn-text:active .btn-icon {
    -unity-background-image-tint-color: var(--color-accent);
}

.btn-text:disabled {
    color: var(--color-text-disabled);
    background-color: transparent;
    cursor: default;
    /* transform: none; - transform not supported in Unity UI Toolkit */
}

.btn-text:disabled .btn-icon {
    -unity-background-image-tint-color: var(--color-text-disabled);
}

/* =================================
   OUTLINED BUTTON STATES
   ================================= */

.btn-outlined:hover {
    background-color: var(--color-accent);
    color: var(--color-text-primary);
    border-color: var(--color-accent);
    /* transform: translateY(-1px); - transform not supported in Unity UI Toolkit */
}

.btn-outlined:hover .btn-icon {
    -unity-background-image-tint-color: var(--color-text-primary);
}

.btn-outlined:active {
    background-color: var(--color-active);
    color: var(--color-text-primary);
    border-color: var(--color-accent);
    /* transform: translateY(0); - transform not supported in Unity UI Toolkit */
}

.btn-outlined:active .btn-icon {
    -unity-background-image-tint-color: var(--color-text-primary);
}

.btn-outlined:disabled {
    background-color: transparent;
    color: var(--color-text-disabled);
    border-color: var(--color-border-alpha);
    cursor: default;
    /* transform: none; - transform not supported in Unity UI Toolkit */
}

.btn-outlined:disabled .btn-icon {
    -unity-background-image-tint-color: var(--color-text-disabled);
}

/* =================================
   TOGGLE BUTTON STATES
   ================================= */

.btn-toggle:hover {
    background-color: var(--color-hover);
    color: var(--color-text-primary);
    border-color: var(--color-accent);
}

.btn-toggle:hover .btn-icon {
    -unity-background-image-tint-color: var(--color-text-primary);
}

.btn-toggle:active {
    background-color: var(--color-active);
    /* transform: scale(0.98); - transform not supported in Unity UI Toolkit */
}

.btn-toggle.btn-toggle-selected:hover {
    background-color: var(--color-focus);
    border-color: var(--color-focus);
}

.btn-toggle.btn-toggle-selected:active {
    background-color: var(--color-active);
    /* transform: scale(0.98); - transform not supported in Unity UI Toolkit */
}

.btn-toggle:disabled {
    background-color: var(--color-primary-bg);
    color: var(--color-text-disabled);
    border-color: var(--color-border-alpha);
    cursor: default;
    /* transform: none; - transform not supported in Unity UI Toolkit */
}

.btn-toggle:disabled .btn-icon {
    -unity-background-image-tint-color: var(--color-text-disabled);
}

/* =================================
   GHOST BUTTON STATES
   ================================= */

.btn-ghost:hover {
    background-color: var(--color-hover);
    color: var(--color-text-primary);
}

.btn-ghost:hover .btn-icon {
    -unity-background-image-tint-color: var(--color-text-primary);
}

.btn-ghost:active {
    background-color: var(--color-active);
    color: var(--color-text-primary);
    /* transform: scale(0.95); - transform not supported in Unity UI Toolkit */
}

.btn-ghost:active .btn-icon {
